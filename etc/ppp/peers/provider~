# Assuems the modem is already connected
/dev/ttyMFD1

# Speed of the serial line
19200 
lock
modem
#nodetach
debug
#record /home/root/BeaconOnBoard/logs/ppplog.txt
crtscts

# Add the ppp interface as default route to the IP routing table
defaultroute

persist

# No ppp compression
novj
novjccomp

noccp
nopcomp
nobsdcomp
noaccomp
nodeflate

# Try with compression
# deflate 15,15

# Let the modem figure out all the IP addresses
noipdefault
ipcp-accept-local
ipcp-accept-remote

noauth

# Do not send loopback commands because they causes problems
silent

connect "/etc/ppp/peers/tmobile.chat"
disconnect "/etc/ppp/peers/disconnect.chat"
